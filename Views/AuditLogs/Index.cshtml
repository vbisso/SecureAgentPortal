@model List<SecureAgentPortal.Models.Domain.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<h2>Audit Logs (Last 200)</h2>

<table class="table table-sm table-bordered mt-3">
    <thead>
        <tr>
            <th>Time (UTC)</th>
            <th>Action</th>
            <th>Entity</th>
            <th>EntityId</th>
            <th>UserId</th>
            <th>IP</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model)
    {
        <tr>
            <td>@log.TimestampUtc.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@log.Action</td>
            <td>@log.EntityType</td>
            <td>@log.EntityId</td>
            <td style="max-width:160px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">@log.PerformedByUserId</td>
            <td>@log.IpAddress</td>
            <td style="max-width:280px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">@log.Details</td>
        </tr>
    }
    </tbody>
</table>
